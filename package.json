{
  "name": "compound",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy-dev": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ radicle-dev/radicle-governance",
    "create-local": "graph create --node http://localhost:8020/ radicle-dev/radicle-governance",
    "remove-local": "graph remove --node http://localhost:8020/ radicle-dev/radicle-governance",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 radicle-dev/radicle-governance",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "deploy:mainnet": "yarn prepare:mainnet && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ radicle/radicle-governance",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "deploy:ropsten": "yarn prepare:ropsten && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ xla/radicle-governance-ropsten"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.17.1",
    "@graphprotocol/graph-ts": "0.17.0",
    "ganache-cli": "^6.12.2",
    "truffle": "^5.1.66"
  },
  "devDependencies": {
    "mustache": "^4.1.0"
  }
}
